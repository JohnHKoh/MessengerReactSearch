{
    "name": "Facebook React Search",
    "description": "Search emoji reactions for Facebook Messenger",
    "manifest_version": 3,
    "version": "1.0",
    "permissions": [],
    "content_scripts": [
        {
            "matches": [
                "https://www.messenger.com/t/*",
                "https://www.facebook.com/*"
            ],
            "js": [
                "lib/jquery-3.6.0.min.js",
                "src/emojis.js",
                "src/emojiSearch.js",
                "src/content-script.js"
            ],
            "css": [
                "src/content.css"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [ 
                "assets/search.png" // Icon made by Royyan Wijaya from www.flaticon.com
            ],
            "matches": [
                "https://www.messenger.com/*",
                "https://www.facebook.com/*"
            ]
        }
    ],
    "icons": {
        "128": "assets/icon128.png"
    }
}